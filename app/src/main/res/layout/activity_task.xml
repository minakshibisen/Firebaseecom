<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.TaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rely_apparel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:background="@drawable/button_bg"
            android:padding="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_3sdp"
                android:text="Apparel"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rely_electronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:background="@drawable/button_bg"
            android:padding="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_3sdp"
                android:text="Electronic"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nike"
          android:background="@drawable/button_bg_round"
          android:paddingHorizontal="@dimen/_25sdp"
          android:paddingVertical="@dimen/_8sdp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Puma"
          android:background="@drawable/button_bg_round"
          android:paddingHorizontal="@dimen/_25sdp"
          android:paddingVertical="@dimen/_8sdp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Adidas"
          android:background="@drawable/button_bg_round"
          android:paddingHorizontal="@dimen/_25sdp"
          android:paddingVertical="@dimen/_8sdp" />

                <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nike"
          android:background="@drawable/button_bg_round"
          android:paddingHorizontal="@dimen/_25sdp"
          android:paddingVertical="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_round"
                    android:paddingHorizontal="@dimen/_25sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:text="Nike" />

            </LinearLayout>

        </HorizontalScrollView>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/view_fruit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/img_shoes" />

            <TextView
                android:id="@+id/text_fruit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_fruit"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Best Seller"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/text_fruit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_fruit_name"
                android:fontFamily="@font/poppins_medium"
                android:text="Nike Jorden"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="$575.54"
                android:layout_centerVertical="true"
                android:layout_below="@id/text_fruit_count"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="end"
                android:background="@drawable/background_circle"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/text_fruit_count"
                android:src="@drawable/ic_add"
                app:tint="@color/white" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>